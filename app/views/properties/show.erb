<h1>Book a room</h1>
<h2><%= @property.title %></h2>
<h3>About:</h3>
<%= @property.description %>
<h3>Price:</h3>
  <p><%= @property.price %></p>
<h3>Reviews: </h3>
<% @property.reviews.each do |y| %>
    <p><%= y.description %></p>
<% end %>
<a href="/properties/<%= @property.id %>/edit">Edit Property</a><br>
<a href="/reviews/new">Post a review!</a><br>
<a href="/bookings/new">Book Now</a><br>
<p><a href="/home">Home</a></p>
<form action="/sessions" method="post">
  <input name="_method" type="hidden" value="delete" />
  <input type="submit" value="Logout">
</form>
